<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Library | READS by galvanize</title>
</head>

<body>
    <section>
        <h2>Library</h2>
        <ul class="container">
            {{#each books}}
                <li class="row">
                    <h3>{{this.title}}</h3>
                    <div class="author">
                        <img src="{{this.authors[0].portrait}}" alt="portrait of {{this.authors[0].lastname}}">
                        <div>{{this.authors[0].firstname}} {{this.authors[0].lastname}}</div>
                    </div>
                </li>
            {{/each}}
        </ul>
    </section>
</body>

</html>
